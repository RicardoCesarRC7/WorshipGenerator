@model List<DateTime>

<div class="row">
    <div class="col-12">
        <h3>Relação de Músicas</h3>
        <hr />
    </div>
</div>

@if (Model.Count > 0)
{
    foreach (DateTime date in Model)
    {
        <div class="row">
            <div class="col-12">
                <div class="card relacao-musical">
                    <div class="card-header">
                        <h5 class="card-title">Domingo <span class="data-relacao-musical">@date.ToShortDateString()</span></h5>
                    </div>
                    <div class="card-body">
                        <div class="row musica-relacao-row">
                            <div class="col-10">
                                <select class="form-control musica-relacao-select">
                                    <option class="" value="">Selecione a música...</option>
                                </select>
                            </div>
                            <div class="col-2">
                                <button class="btn btn-dark btn-sm adicionar-linha-musica"><i class="fas fa-plus"></i></button>
                                <button class="btn btn-danger btn-sm remover-linha-musica"><i class="fas fa-minus"></i></button>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="mt-3"></div>
    }

    <div class="row">
        <div class="col-12 text-center">
            <button class="btn btn-success" id="adicionar-relacao-button">Adicionar Relação <i class="fas fa-check"></i></button>
        </div>
    </div>
}

