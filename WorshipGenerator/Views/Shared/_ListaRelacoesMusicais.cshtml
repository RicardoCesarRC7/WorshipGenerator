@model List<RelacaoPeriodica>

<div class="row text-center">
    <h1 class="text-uppercase">Últimas Relações Musicais</h1>
</div>
<div class="mt-5"></div>
<div class="row">
    <div class="col-12">
        <table class="table table-striped text-center">
            <thead>
                <tr>
                    <th>Período</th>
                    <th>Autor</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Count > 0)
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>De @item.De.ToShortDateString() até @item.Ate.ToShortDateString()</td>
                            <td>@item.Autor</td>
                            <td>
                                <a class="btn btn-sm btn-default ver-detalhes-relacao-musical" href="/Musica/DetalhesRelacao/@item.Id"><i class="fas fa-eye"></i></a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="4">Não há relações musicais registradas</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
