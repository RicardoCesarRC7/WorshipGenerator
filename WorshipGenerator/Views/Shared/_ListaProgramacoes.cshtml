@model List<Programacao> 

<div class="row">
    <div class="col text-center">
        <h1 class="text-uppercase">Últimas Programações</h1>
    </div>
</div>
<div class="mt-5"></div>
<div class="row">
    <table class="table table-striped text-center">
        <thead>
            <tr>
                <th>Local</th>
                <th>Data</th>
                <th>Horário</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Count > 0)
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Local</td>
                        <td>@item.Data.ToShortDateString()</td>
                        <td>@item.Hora</td>
                        <td>
                            <a class="btn btn-sm btn-default see-programacao-button" href="/Programacao/Detalhes/@item.Id"><i class="fas fa-eye"></i></a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="4">Não há programações registradas</td>
                </tr>
            }
        </tbody>
    </table>
</div>
