<section id="mainCarouselSection">
    <div id="mainCarousel" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100" src="~/assets/images/carousel/3.png" alt="First slide">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Louvor e Música</h5>
                    <p>Adicione e verifique músicas e informações sobre o Louvor da IBET</p>
                </div>
            </div>
        </div>
    </div>
</section>

<div class="container" ng-controller="broadcastController as controller" ng-init="controller.init()">
    <div class="mt-5"></div>

    <div class="col-12">
        <div class="row">
            <div class="col-12">
                <h3>Período</h3>
                <hr />
            </div>
        </div>
        <div class="row">
            <div class="col-6">
                <label class="control-label">De:</label>
                <input class="form-control datepicker" type="text" ng-model="controller.periodicSet.from" />
            </div>
            <div class="col-6">
                <label class="control-label">Até:</label>
                <input class="form-control datepicker" type="text" ng-model="controller.periodicSet.to" />
            </div>
        </div>
        <div class="mt-3"></div>
        <div class="row">
            <div class="col-12 text-right">
                <button type="button" class="btn btn-outline-success" ng-click="controller.getConfirmDates()">Confirmar datas <i class="fas fa-check"></i></button>
                <hr />
            </div>
        </div>

        <div class="mt-3"></div>
        <section id="itens-relacao-musicas" ng-show="controller.broadcastSet.length > 0">
            <div class="row">
                <div class="col-12">
                    <h3>Relação de Músicas</h3>
                    <hr />
                </div>
            </div>
            <div class="row">
                <div class="col-12 mb-2" ng-repeat="item in controller.broadcastSet">
                    <div class="card relacao-musical">
                        <div class="card-header">
                            <h5 class="card-title">Domingo <span class="">{{item.date}}</span></h5>
                        </div>
                        <div class="card-body">
                            <div class="" ng-repeat="memberItem in item.members">
                                <div class="row mb-0 form-group">
                                    <div class="col-12">
                                        <hr ng-show="item.members.indexOf(memberItem) != 0" />
                                    </div>
                                    <div class="col-10">
                                        <select class="form-control">
                                            <option value="">Selecione a função...</option>
                                            <option value="{{broadcastFunction.id}}" ng-repeat="broadcastFunction in controller.broadcastFunctions">{{broadcastFunction.name}}</option>
                                        </select>
                                        <div class="mt-2"></div>
                                        <select class="form-control">
                                            <option value="">Selecione o responsável...</option>
                                            <option value="{{member.id}}" ng-repeat="member in controller.broadcastMembers">{{member.firstName}} {{member.lastName}}</option>
                                        </select>
                                    </div>
                                    <div class="col-2">
                                        <button class="btn btn-dark btn-sm adicionar-linha-musica" ng-click="controller.addMember(item)"><i class="fas fa-plus"></i></button>
                                        <button class="btn btn-danger btn-sm remover-linha-musica" ng-click="controller.removeMember(item, memberItem)"><i class="fas fa-minus"></i></button>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="mt-3"></div>


            <div class="row">
                <div class="col-12 text-center">
                    <button class="btn btn-success" id="adicionar-escala-button" ng-click="!controller.isUpdate ? controller.add() : controller.edit()">{{ !controller.isUpdate ? 'Adicionar Escala' : 'Atualizar Escala' }} <i class="fas fa-check"></i></button>
                </div>
            </div>

        </section>
    </div>
</div>