<div class="modal fade" id="manage-department-modal" tabindex="-1" role="dialog" aria-labelledby="manage-department-modal" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <form id="manage-department-form">
                <div class="modal-header">
                    <h5 class="modal-title" id="gerenciar-musica-modal-title">Novo Departamento</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">

                    <div class="row">
                        <div class="col-12">
                            <div class="col-12">
                                <h4>Informações básicas</h4>
                                <hr />
                            </div>
                        </div>
                    </div>

                    <!-- Names -->
                    <div class="row">
                        <div class="col-12">
                            <div class="col-12">
                                <label class="control-label">Nome</label>
                                <input type="text" class="form-control" name="name" placeholder="Insira o nome do departamento" ng-model="controller.department.name" />
                            </div>
                        </div>
                    </div>
                    <div class="row mt-3"></div>
                    <div class="row">
                        <div class="col-12">
                            <div class="col-12">
                                <label class="control-label">Descrição</label>
                                <textarea class="form-control" name="description" placeholder="Insira a descrição do departamento" ng-model="controller.department.description"></textarea>
                            </div>
                        </div>
                    </div>
                    <div class="row mt-5"></div>
                    <div class="row">
                        <div class="col-12">
                            <div class="col-12">
                                <h4>Funções</h4>
                                <hr />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12 mb-3" ng-show="controller.functionController.functions.length > 0" ng-repeat="function in controller.functionController.functions">
                            <div class="col-12">
                                <div class="card bg-light">
                                    <div class="card-body pr-0">
                                        <div class="row col-12 pr-0">
                                            <input type="text" class="form-control" placeholder="Insira o nome da função..." ng-model="function.name" />
                                        </div>
                                        <div class="row mt-3"></div>
                                        <div class="row col-12 pr-0">
                                            <textarea class="form-control" placeholder="Descreva a função..." ng-model="function.description"></textarea>
                                        </div>
                                        @*<div class="row mt-3"></div>
                                        <div class="row col-12 pr-0" ng-show="controller.functionController.functions.indexOf(function) == controller.functionController.functions.length - 1">
                                            <button class="btn btn-success btn-sm m-auto" title="Adicionar nova função" data-toggle="tooltip" ng-click="controller.functionController.add(function)"><i class="fas fa-plus"></i></button>
                                        </div>
                                        <div class="row col-12 pr-0" ng-show="controller.functionController.functions.indexOf(function) != controller.functionController.functions.length - 1">
                                            <button class="btn btn-danger btn-sm m-auto" title="Remover função" data-toggle="tooltip"><i class="fas fa-minus"></i></button>
                                        </div>*@
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-12 text-center">
                            <button type="button" class="btn btn-sm btn-success" ng-click="controller.functionController.add()">Nova função <i class="fas fa-plus"></i></button>
                        </div>
                    </div>

                    <!-- Civil information -->
                    <div class="row mt-3"></div>
                    <div class="row">
                        <div class="col-12 col-md-6">
                            @*<label class="control-label">Fonte</label>*@
                            @*<select class="form-control" id="fonte-musica" ng-model="controller.function">
                    <option value="" disabled="disabled" selected="selected">Selecione uma função</option>
                    <option ng-repeat="source in controller.musicalSources" value="{{source.id}}">{{source.name}}</option>
                </select>*@
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-success" ng-click="!controller.isEdit ? controller.add() : controller.update()">Salvar</button>
                </div>
            </form>
        </div>
    </div>
</div>