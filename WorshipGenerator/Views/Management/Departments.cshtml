<section id="mainCarouselSection">
    <div id="mainCarousel" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100" src="~/assets/images/carousel/2.png" alt="First slide">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Louvor e Música</h5>
                    <p>Adicione e verifique músicas e informações sobre o Louvor da IBET</p>
                </div>
            </div>
        </div>
    </div>
</section>

<div class="container" ng-controller="departmentController as controller" ng-init="controller.init()">
    <div class="mt-5"></div>

    <div class="row">
        <div class="col-12 text-right">
            <button class="btn btn-success" type="button" ng-click="controller.openManageDepartmentModal()">Adicionar Departamento <i class="fas fa-plus"></i></button>
        </div>
    </div>

    <div class="row mt-3">
        <div class="col-12">
            <table class="table table-striped text-center">
                <thead>
                    <tr>
                        <th>Nome</th>
                        <th>Descrição</th>
                        <th>Ações</th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="dept in controller.departments">
                        <td class="col-4">{{dept.name}}</td>
                        <td class="col-4">{{dept.description}}</td>
                        <td class="col-4">
                            <button class="btn btn-sm btn-dark" ng-click="controller.openManageDepartmentModal(dept)"><i class="fas fa-pencil-alt"></i></button>
                            <button class="btn btn-sm btn-danger" ng-click="controller.remove(dept.id)"><i class="fas fa-trash"></i></button>
                        </td>
                    </tr>
                    <tr ng-show="controller.departments == null || controller.departments.length == 0">
                        <td colspan="3">Não há departamentos registrados</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <partial name="_ManageDepartmentModal" />
</div>