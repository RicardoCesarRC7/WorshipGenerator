<section id="mainCarouselSection">
    <div id="mainCarousel" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100" src="~/assets/images/carousel/2.png" alt="First slide">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Louvor e Música</h5>
                    <p>Adicione e verifique músicas e informações sobre o Louvor da IBET</p>
                </div>
            </div>
        </div>
    </div>
</section>

<div class="container" ng-controller="membershipController as controller" ng-init="controller.init()">
    <div class="mt-5"></div>

    <div class="row">
        <div class="col-12 text-right">
            <button class="btn btn-success" type="button" id="adicionar-musica-button" ng-click="controller.openManageMemberModal()">Adicionar Membro <i class="fas fa-plus"></i></button>
        </div>
    </div>

    <div class="row mt-3">
        <div class="col-12">
            <table class="table table-striped text-center">
                <thead>
                    <tr>
                        @*<th>Id</th>*@
                        <th>Nome</th>
                        <th class="hidden-xs hidden-sm">Idade</th>
                        <th class="hidden-xs hidden-sm">Telefone/Celular</th>
                        <th>E-mail</th>
                        <th class="hidden-xs hidden-sm">Endereço</th>
                        <th>Ações</th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="member in controller.members">
                        @*<td class="musica-id">{{member.id}}</td>*@
                        <td>{{member.firstName}} {{member.lastName}}</td>
                        <td class="hidden-xs hidden-sm">{{member.age}}</td>
                        <td class="hidden-xs hidden-sm">{{member.cellphone != null ? member.cellphone : member.phone}}</td>
                        <td>{{member.email}}</td>
                        <td class="hidden-xs hidden-sm">{{member.address.place}} {{member.address.number}} {{member.address.complement}} {{member.address.zipCode}}</td>
                        <td>
                            <button class="btn btn-sm btn-dark" ng-click="controller.openManageMemberModal(member)"><i class="fas fa-pencil-alt"></i></button>
                            <button class="btn btn-sm btn-danger" ng-click="controller.remove(member.id)"><i class="fas fa-trash"></i></button>
                        </td>
                    </tr>
                    <tr ng-show="controller.members == null || controller.members.length == 0">
                        <td colspan="7" ng-show="controller.isLoading">
                            <div class="spinner-border" role="status">
                                <span class="sr-only">Carregando...</span>
                            </div>
                        </td>
                        <td colspan="7" ng-show="!controller.isLoading">Não há membros registrados</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <partial name="_ManageMemberModal" />
</div>