@model RelacaoPeriodica
@{
    ViewData["Title"] = "Detalhes - Relação Musical";
}

<section id="mainCarouselSection">
    <div id="mainCarousel" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100" src="~/assets/images/carousel/2.png" alt="First slide">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Louvor e Música</h5>
                    <p>Adicione e verifique músicas e informações sobre o Louvor da IBET</p>
                </div>
            </div>
        </div>
    </div>
</section>

<div class="container">
    <div class="mt-5"></div>
    <div class="row">
        <div class="col-12">
            <h3>Período</h3>
            <hr />
        </div>
    </div>
    <div class="row">
        <div class="col-6">
            <label class="control-label">De:</label>
            <input class="form-control" type="text" id="de-relacao" value="@Model.De.ToShortDateString()" disabled="disabled" />
        </div>
        <div class="col-6">
            <label class="control-label">Até:</label>
            <input class="form-control" type="text" id="ate-relacao" value="@Model.Ate.ToShortDateString()" disabled="disabled" />
        </div>
    </div>

    <div class="mt-5"></div>
    <section id="itens-relacao-musicas">
        <div class="row">
            <div class="col-12">
                <h3>Relações Musicais</h3>
                <hr />
            </div>
        </div>
        @foreach (var item in Model.RelacoesMusicais)
        {
        <div class="row">
            <div class="col-12">
                <div class="card relacao-musical">
                    <div class="card-header">
                        <h5 class="card-title">Domingo <span class="data-relacao-musical">@item.Data.ToShortDateString()</span></h5>
                    </div>
                    <div class="card-body">
                        @foreach (var musica in item.Musicas)
                        {
                        <div class="row musica-relacao-row text-center">
                            <div class="col-12">
                                <input type="text" class="form-control text-center @(item.Musicas.IndexOf(musica) != 0 ? " mt-2" : "" )" value="@(musica.Nome + " (p. " + musica.Pagina + " , ed. " + musica.Edicao + " º)")" disabled="disabled" />
                                @*<select class="form-control musica-relacao-select">
                                    <option class="" value="">Selecione a música...</option>
                                </select>*@
                            </div>
                            @*<div class="col-2">
                                <button class="btn btn-dark btn-sm adicionar-linha-musica"><i class="fas fa-plus"></i></button>
                                <button class="btn btn-danger btn-sm remover-linha-musica"><i class="fas fa-minus"></i></button>
                            </div>*@
                        </div>
                        }
                    </div>
                </div>
            </div>
        </div>
        <div class="mt-3"></div>
        }
    </section>

</div>

