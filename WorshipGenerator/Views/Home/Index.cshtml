@{
    ViewData["Title"] = "Home";
}

<section id="mainCarouselSection">
    <div id="mainCarousel" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#mainCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#mainCarousel" data-slide-to="1"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100" src="~/assets/images/carousel/1.png" alt="First slide">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Gerador de programação</h5>
                    <p>Crie e organize a programação para os eventos da IBET</p>
                </div>
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="~/assets/images/carousel/2.png" alt="Third slide">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Louvor &amp; Música</h5>
                    <p>Adicione e verifique músicas e informações sobre o Louvor da IBET</p>
                </div>
            </div>
        </div>
        <a class="carousel-control-prev" href="#mainCarousel" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#mainCarousel" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</section>

<div class="bg-light">
    <div class="container container-fluid">
        <section id="ultimas-programacoes-section" class="p-5"></section>
    </div>
</div>
<div class="bg-white">
    <div class="container container-fluid">
        <section id="ultimas-relacoes-musicais-section" class="p-5"></section>
    </div>
</div>




